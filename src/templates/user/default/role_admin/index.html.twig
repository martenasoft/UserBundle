{% extends '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/base.html.twig' %}

{% block title %}{{ 'Roles items' | trans }} {{ 'index' | trans }} ({{ pagination.getTotalItemCount }}) {% endblock %}
{% block h1 %}{{ 'Roles items' | trans }} {{ 'index' | trans }} ({{ pagination.getTotalItemCount }}) {% endblock %}

{% block h1_right %}
    {% include '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/_view_admin_sub_menu.html.twig' with {
        createButtonTitle: 'Create role',
        createButtonPath: path('app_role_admin_new'),
        items: [
            {
                title: 'Users',
                path: path('app_user_admin_index'),
                titleCreate: 'Create',
                pathCreate: path('app_user_admin_new')
            },
            {
                title: 'Permissions',
                path: path('app_permission_admin_new'),
                titleCreate: 'Create',
                pathCreate: path('app_permission_admin_new')
            },
        ]
    }%}
{% endblock %}
{% block breadcrumbs %}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_page_main') }}">{{ 'Home' | trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_main') }}">{{ 'Admin' | trans }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'Roles items' | trans }}</li>
        </ol>
    </nav>
{% endblock %}
{% block body %}

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'Name' | trans }}</th>
            <th>{{ 'Permissions' | trans }}</th>
            <th class="text-end"></th>
        </tr>
        </thead>
        <tbody>
        {% for role in pagination %}
            <tr>
                <td>{{ role.name }}</td>
                <td>
                    {% for permission in role.permissions %}
                        {{ permission.name }}
                    {% endfor %}
                </td>
                <td class="text-end">
                    <a class="btn btn-outline-secondary" href="{{ path('app_role_admin_show', {'uuid': role.uuid}) }}">{{ 'Show' | trans }}</a>
                    <a class="btn btn-outline-secondary" href="{{ path('app_role_admin_edit', {'uuid': role.uuid}) }}">{{ 'Edit' | trans }}</a>
                    <a class="btn btn-outline-danger" href="{{ path('app_role_admin_delete', {'uuid': role.uuid}) }}"
                       onclick="return confirm('{{ 'Delete role' | trans }}')">{{ 'Delete' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    {% include '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/no_records_founds.html.twig' %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
